pico-8 cartridge // http://www.pico-8.com
version 18
__lua__


player_x=32
player_y=0

player = {}

baddies = {}
f=0
playing=false
goal = {
  x=128,
  y=rnd(120),
  c=11,
  live=true
}

function _init() 
  cartdata('thaggie_rain')
  high = dget(0)
  score = 0
  for c=7,1,-1 do
    player[c]={x=32 - (c*4), y=60, c=c}
  end
  
  baddies[1] = {x=128, y=60}
  
  flag=0
end

function bad()
  return {x=128,y=flr(rnd(120)) + 1}
end

function _update()
  
  if (playing==false) then
    if (btn(4) or btn(5)) then
      playing=true
      score = 0
      baddies = {}
      goal.x = 128
      goal.y = rnd(120)
    end
    return
  end
  
  for c=7,2,-1 do
      player[c].y = player[c-1].y
  end
  
  if (player[1].y>1) then
    if(btn(2)) then
      player[1].y-=1
    end
  end
  
  if (player[1].y < 120) then
    if(btn(3)) then
      player[1].y+=1
    end
  end
  
  
  if (goal.x < -8) then
    goal.x = 128
    goal.y = rnd(120)
    goal.live= true

  else 
    goal.x -=1
  end
  
  for b=1,#baddies do
    baddies[b].x -=1
    if (baddies[b].x < -8) then
       baddies[b] = bad()     
   end    
  end
  
  if (f%18==0) then
    baddies[#baddies+1] = bad()
    score += 100
  end
  
  x = player[1].x
  y = player[1].y
  dead = false
  for b=1,#baddies do
    bd = baddies[b]
    if (bd.x < x+5 and bd.x >= x-5) then
      if (bd.y < y+4 and bd.y >= y-4) then
        dead = true
      end 
    end
  end

  if (goal.live) then
    if (goal.x < x+5 and goal.x >= x-5) then
      if (goal.y < y+4 and goal.y >= y-4) then
        score += 1000
        goal.live = false
        sfx(0)
      end
    end
  end
  
  if dead then
    if (score > high) then 
      high = score
      dset(0, high)
    end
    
    playing = false
  end
  f+=1
end


function draw_game()
  cls()
 
  
  
  for c=7,1,-1 do
    p = player[c]
    spr(p.c,p.x, p.y)
  end
  
  for b=1,#baddies do
    spr(0,baddies[b].x, baddies[b].y)
  end
  
  if (goal.live) then
    spr(goal.c,goal.x, goal.y)
  end
  
  print('high: '.. high .. ' score: ' .. score, 0,0)
  
  
end

function draw_score()
  cls(1)
  print('high score: '.. high, 32,20)

  if (score > 0) then
    print('your score: '.. score,30,60)
  end

  print('press x / y to start', 25, 100)
end

function _draw() 
  cls()
  
  if (playing==false) then
    draw_score()
  else
    draw_game()
  end
  
end
