pico-8 cartridge // http://www.pico-8.com
version 18
__lua__

letters = {
  'a','b','c','d','e', 
  'f','g','h','i','j',
  'k','l','m','n','o',
  'p','q','r','s','t',
  'u','v','w','x','y',
  'z',' ','\'','<','_',}

px=0
py=0

name={}

function _update() 
  if (btnp(0)) then
   px -= 1
  end
  if (btnp(1)) then
   px += 1
  end
    if (btnp(2)) then
   py -= 1
  end
  if (btnp(3)) then
   py += 1
  end
  
  if (py < 0) then
    py = 5
  end
  if (py > 5) then
    py = 0
  end
  
  if (px < 0) then
    px = 4
  end
  if (px > 4) then
    px = 0
  end
  
  if (btnp(5)) then
    c = 1+px+py*5
    if (c == 29) then
      name[#name]=nil
    end
    if (c == 30) then
    end
    if (c <29 and #name<8) then
      name[#name+1] = 1+px+py*5
    end
  end
end

function _draw() 
  cls()
  
  for x=0,4 do
    for y=0,5 do
      l = (x+y*5)+1
      lx = 64-25+ x*10
      ly = 2+ y*12
      rect(lx,ly,lx+6,ly+8,7)
      print(letters[l],lx+2,ly+2,7)
    end
  end
 
  vx = px*10 + 37
  vy = py*12 
  rect(vx,vy,vx+10,vy+12,8)

	 for n=1,#name do
	   l = name[n]
	   o = 64-(#name*5)/2
	   print(letters[l], o+n*5, 120)
	 end
end

